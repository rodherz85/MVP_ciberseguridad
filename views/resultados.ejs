<% layout('simulador_layout') %>

<div class="card-resultados">
    
    <div class="header-resultados">
        <h1 class="titulo-resultados">INFORME DE MISIÓN</h1>
    </div>

    <div class="contenedor-lista">
        
        <% evidencias.forEach(function(evidencia) { %>
            <div class="item-evidencia">
                
                <div class="info-pista">
                    <span class="icono-resultado"><%= evidencia.icono %></span>
                    <span><%= evidencia.nombre %></span>
                </div>

                <div class="detalle-puntos <%= evidencia.claseColor %>">
                    <%= evidencia.puntos %> pts
                </div>

                <div class="columna-feedback">
                    <%= evidencia.feedback %>
                </div>
                
            </div>
        <% }); %>

    </div>

    <div class="footer-resultados">
        
        <div class="bloque-puntaje">
            <span style="font-size: 14px; color: #666; text-transform: uppercase;">Calificación Final:</span>
            <span class="sello-puntaje">
                <%= puntajeObtenido %> / <%= puntajeMax %>
            </span>
        </div>

        <a href="/posttest?uid=<%= userId %>" class="btn-cerrar-caso">
        Continuar a la Evaluación Final ➔
    </a>
    </div>

</div>