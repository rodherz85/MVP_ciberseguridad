<% layout('simulador_layout') %>

<div id="modal-overlay" class="modal-overlay oculto">
    <div class="modal">
        
        <h2 id="modal-pregunta" class="modal-titulo">
            ¿Esto te parece sospechoso o fraudulento?
        </h2>

        <div class="modal-opciones">
            <button id="modal-btn-si" class="modal-btn btn-si">Sí</button>
            <button id="modal-btn-no" class="modal-btn btn-no">No</button>
        </div>

        <p id="modal-feedback" class="modal-feedback oculto"></p>

        <button id="modal-cerrar" class="modal-cerrar">Cerrar</button>
    </div>
</div>

<!-- TOOLTIP INTERACTIVO GLOBAL -->
<div id="tooltip-pista" class="tooltip-ventana oculto">
    <div class="tooltip-pregunta"></div>

    <div class="tooltip-botones">
        <button class="tooltip-btn btn-si">Sí</button>
        <button class="tooltip-btn btn-no">No</button>
    </div>

    <div class="tooltip-feedback oculto"></div>

    <button class="tooltip-cerrar">Cerrar</button>
</div>